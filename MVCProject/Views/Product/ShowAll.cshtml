<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    img {
        max-width: 100px;
        max-height: 100px;
    }

    a {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
    }
</style>

<table class="table table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Image</th>
        <th>Details</th>
    </tr>

    @foreach (Product item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>$@item.Price</td>
            <td><img src="~/Images/@item.ImageURL" /></td>
            <td><a href="/Product/Details/@item.Id">More Details</a></td>
        </tr>
    }
</table>
