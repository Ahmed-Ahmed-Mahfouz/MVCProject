@model List<MVCProject.Models.Instructor>
@{
    Layout = "~/Views/Shared/_AdvLayout.cshtml";
    ViewData["Title"] = "Instructors";
}

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: center;
        border-bottom: 1px solid #ddd;
        vertical-align: middle;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    img {
        max-width: 100px;
        max-height: 100px;
    }

    a {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
    }
</style>

<h1>All Instructors</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Salary</th>
        <th>Address</th>
        <th>Image</th>
        <th>Details</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>$@String.Format("{0:N0}", item.Salary)</td>
            <td>@item.Address</td>
            <td><img src="~/Images/@item.ImageURL" style="width:100px" /></td>
            <td><a href="/Instructor/Details/@item.Id">More Details</a></td>
        </tr>
    }
</table>
<a href="/Instructor/New" style="color:aliceblue;background-color:deepskyblue;font-weight:bold; padding: 10px 20px; border:none; border-radius:5px;text-decoration:none;"> ➕ Add Instructor</a>