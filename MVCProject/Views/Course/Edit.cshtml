@model Course
@{
    ViewData["Title"] = "Edit";
    SelectList deptList = new SelectList(ViewBag.Depts, "Id", "Name", Model.DepartmentId);
}

<h1>Edit Course</h1>

<form asp-action="SaveEdit" asp-controller="Course" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name" class="mt-2"></label>
        <input asp-for="Name" class="form form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Degree" class="mt-2"></label>
        <input asp-for="Degree" class="form form-control" />
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="minDegree" class="mt-2"></label>
        <input asp-for="minDegree" class="form form-control" />
        <span asp-validation-for="minDegree" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DepartmentId" class="mt-2"></label>
        <select asp-for="DepartmentId" class="form form-control" asp-items="deptList">
            <option value="0">--Select Department--</option>
        </select>
    </div>
    <span asp-validation-for="DepartmentId" class="text-danger"></span>
    <input type="submit" value="Save" class="btn btn-primary my-3" />
</form>
<a asp-action="Index" asp-controller="Course">Back To List</a>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
